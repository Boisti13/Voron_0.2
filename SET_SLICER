Setting Slicer

Orca:
SET_SLICER SLICER=Orca

Cura:
SET_SLICER SLICER=Cura

[gcode_macro SET_SLICER]
description: Get slicer name
variable_slicer: ''
gcode:
 {% set SLICER = params.SLICER|string %}
 SET_GCODE_VARIABLE MACRO=SET_SLICER VARIABLE=slicer VALUE='"{SLICER}"' ; Save the material type to a variable just because
   {% if SLICER == 'Cura' %}
     M117 {SLICER}
   {% elif SLICER == "Orca" %}
     M117 {SLICER}
   {% endif %}
